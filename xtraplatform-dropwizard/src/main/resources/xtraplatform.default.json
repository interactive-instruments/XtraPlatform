{
    "useFormattedJsonOutput": true,
    "allowServiceReAdding": true,
    "server": {
        "applicationConnectors": [
            {
                "type": "http",
                "port": "7080"
            }
        ],
        "adminConnectors": [
            {
                "type": "http",
                "port": "7081"
            }
        ],
        "gzip": {
            "enabled": false
        },
        "requestLog": {
            "timeZone": "Europe/Berlin",
            "appenders": [
                {
                    "type": "file",
                    "currentLogFilename": "./data/log/requests.log",
                    "archive": false,
                    "timeZone": "Europe/Berlin"
                }
            ]
        },
        "shutdownGracePeriod": "5s"
    },
    "httpClient": {
        "timeout": "100000ms",
        "connectionTimeout": "100000ms"
    },
    "logging": {
        "level": "OFF",
        "appenders": [
            {
                "type": "console",
                "timeZone": "Europe/Berlin"
            },
            {
                "type": "file",
                "currentLogFilename": "./data/log/xtraplatform.log",
                "archive": false,
                "timeZone": "Europe/Berlin"
            }
        ],
        "loggers" : {
            "de.ii": "DEBUG"
        }
    }
}
